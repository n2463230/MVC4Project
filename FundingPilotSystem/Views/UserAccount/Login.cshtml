@model FundingPilotSystem.VM.UserAccountManagement.LoginViewModel
@using FundingPilotSystem.Utilities
@{
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Funding Pilot Portal</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    @Html.Style("~/Contents/assets/fonts/open-sans-fontfacekit/stylesheet.min.css")
    @Html.Style("~/Contents/assets/fonts/Font-Awesome/css/font-awesome.min.css")
    @Html.Style("~/Contents/assets/Style.min.css")
    @Html.Style("~/Contents/assets/FontsStyle.min.css")
    @Html.Style("~/Contents/Styles/Shared/Common.min.css")

    @Html.Style("~/Contents/Styles/AccountManagement/UserAccount.min.css")
    @Html.Script("~/Contents/Scripts/Shared/jquery-1.8.1.min.js")
    @Html.Script("~/Contents/Scripts/Shared/jquery-migrate-1.1.1.min.js")
</head>
<body class="loginPageBody">
    @using (Html.BeginForm())
    {
        <div class="loginContainer">
            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group">
                        <div class="controls-row">
                            <div class="loginHeader">
                                <div class="branding">
                                    <div class="logo">
                                        <img src="~/Contents/Images/Shared/logo.jpg" width="100" height="100" alt="P2P-logo" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="loginBody">
                    <div class="span12">
                        <div class="control-group">
                            <div class="controls-row">
                                <div class="offset1 span3">@Html.LabelFor(model => model.Username) </div>
                                <div class="span6">
                                    <div class="controls-row">@Html.EditorFor(model => model.Username)</div>
                                    <div class="controls-row">@Html.ValidationMessageFor(model => model.Username)</div>
                                </div>
                            </div>
                            <div class="controls-row">
                                <div class="offset1 span3">@Html.LabelFor(model => model.Password) </div>
                                <div class="span6">
                                    <div class="controls-row">@Html.EditorFor(model => model.Password)</div>
                                    <div class="controls-row">@Html.ValidationMessageFor(model => model.Password)</div>
                                </div>
                            </div>
                            <div class="controls-row">
                                <div class="offset1 span1">
                                    &nbsp;<br />
                                </div>

                            </div>
                            <div class="controls-row">
                                <div class="offset3 span3">
                                    <input class="button" type="submit" name="btnSubmit" value="Login">
                                </div>
                                <div class="offset1 span3">
                                    <input class="button" type="reset" name="btnReset" value="Reset" onclick="document.location.href = '@Url.Action("Login")    '">
                                </div>

                            </div>
                            <div>&nbsp;</div>
                            <div class="offset3 controls-row">
                                New User? <a href="@Url.Action("Register", "Registration", new { @area = "RegistrationProcess" })"> Register Now </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @Html.Script("~/Contents/assets/js/vendor/modernizr-2.6.2.min.js")
        @Html.Script("~/Contents/Scripts/Shared/jquery.unobtrusive-ajax.min.js")
        @Html.Script("~/Contents/Scripts/Shared/jquery.validate.min.js")
        @Html.Script("~/Contents/Scripts/Shared/jquery.validate.unobtrusive.min.js")
        @Html.Script("~/Contents/assets/js/vendor/bootstrap.min.js")


    }
</body>
